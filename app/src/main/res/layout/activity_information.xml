<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.n0582158.signlanguageapp.information">

    <RelativeLayout
        android:layout_width="@dimen/painting_image_width"
        android:layout_height="@dimen/painting_image_width"
        android:id="@+id/image_paint">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:src="@drawable/a"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/all_media"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="22dp"
        android:layout_below="@+id/image_paint"
        android:layout_toStartOf="@+id/draw"
        android:layout_marginEnd="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/media"
            android:layout_toRightOf="@+id/media2">

            <ImageButton
                android:id="@+id/play_action1"
                android:layout_width="@dimen/icon_media_w"
                android:layout_height="@dimen/icon_media_h"
                android:background="@drawable/button_shape"
                android:src="@mipmap/ic_play"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/media1"
            android:layout_toRightOf="@+id/media">

            <ImageButton
                android:id="@+id/next_action1"
                android:layout_width="@dimen/icon_media_w"
                android:layout_height="@dimen/icon_media_h"
                android:background="@drawable/button_shape"
                android:src="@mipmap/ic_fastforward"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/media2">

            <ImageButton
                android:id="@+id/back_action1"
                android:layout_width="@dimen/icon_media_w"
                android:layout_height="@dimen/icon_media_h"
                android:background="@drawable/button_shape"
                android:src="@mipmap/ic_fastback"/>

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/draw"
        android:background="@drawable/chalkboard"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_paint">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/board" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/all_colors"
        android:layout_toRightOf="@+id/all_media"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/draw">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/red"
            android:src="@drawable/circle_red"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/blue"
            android:layout_toRightOf="@+id/red"
            android:src="@drawable/circle_blue"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/green"
            android:layout_toRightOf="@+id/blue"
            android:src="@drawable/circle_green"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/grey"
            android:layout_toRightOf="@+id/green"
            android:src="@drawable/circle_grey"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/yellow"
            android:layout_toRightOf="@+id/grey"
            android:src="@drawable/circle_yellow"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/eraser"
            android:layout_toRightOf="@+id/yellow"
            android:src="@drawable/erase1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/save"
            android:layout_toRightOf="@+id/eraser"
            android:src="@drawable/btn_save"/>


    </RelativeLayout>

</RelativeLayout>