<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.n0582158.signlanguageapp.LessonsOptions"
    android:background="@drawable/background">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/main_box"
        android:id="@+id/textt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:textColor="#000"
            android:fontFamily="casual"
            android:text="@string/vid_desc"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/main_box"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_box_components"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">


            <RelativeLayout
                android:layout_width="@dimen/box1"
                android:layout_height="@dimen/box1"
                android:id="@+id/lesson_box">

                <ImageView
                    android:id="@+id/dates"
                    android:text="Lessons"
                    android:textColor="#FFFFFF"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/calendar"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vid_dates"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/dates"
                    android:id="@+id/textView" />

            </RelativeLayout>





            <RelativeLayout
                android:layout_width="@dimen/box1"
                android:layout_height="@dimen/box1"
                android:id="@+id/paint_box"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/game_box"
                android:layout_toRightOf="@+id/video_box">

                <ImageView
                    android:id="@+id/color"
                    android:text="Paint"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/colorss"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Colors"
                    android:textSize="20dp"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_below="@+id/color"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="@dimen/box1"
                android:layout_height="@dimen/box1"
                android:id="@+id/game_box"
                android:layout_toRightOf="@+id/lesson_box">

                <ImageView
                    android:id="@+id/animal"
                    android:text="Games"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/dog"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vid_animal"
                    android:textSize="20dp"
                    android:fontFamily="casual"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_below="@+id/animal"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/box1"
                android:layout_height="@dimen/box1"
                android:id="@+id/video_box"
                android:layout_below="@+id/lesson_box">

                <ImageView
                    android:id="@+id/food"
                    android:text="Videos"
                    android:textColor="#FFFFFF"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/food" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vid_foods"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:layout_below="@+id/food"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
